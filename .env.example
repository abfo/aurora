# Copy this file to .env and fill in your local values.
# Do NOT commit your real secrets.

# PICO API key from https://picovoice.ai/platform/porcupine/
PICO_API_KEY=your_pico_api_key_here

# OpenAI API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API key from https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Agent configuration
# Optional path to a file with system/agent instructions
# AGENT_INSTRUCTIONS_PATH=C:/path/to/instructions.txt
# Agent voice (default: shimmer)
AGENT_VOICE=shimmer

# UI implementation to use (default: Debug)
UI=Debug

# Audio input and output devices, log_audio_devices() will output available devices at startup
INPUT_DEVICE_ID=0
OUTPUT_DEVICE_ID=1

# Optional logging settings
LOG_LEVEL=INFO
# LOG_FILE=logs/aurora.log

# Optional: path to Porcupine wake word (.ppn)
# WAKE_WORD_PATH=C:/path/to/porcupine/keyword.ppn
